#include <iostream>

using namespace std;

int main(){
int number;
long factorial=1.0;
cout<<"Enter a positive number";
cin>>number;
if(number<0)
cout<<"error!factorial of negative number does not exist,";
else{
for(int i=1;i<=number;++i)
factorial*=i;
}
cout<<"factorial of"<<endl<<number<<"="<<factorial;
return 0;
}
