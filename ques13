#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Enter a number: ";
    cin >> number;

    int sum = 0;
    int temp = number;

    while (temp != 0) {
        int digit = temp % 10;
        sum += digit;
        temp /= 10;
    }

    cout << "Sum of digits: " << sum << endl;

    return 0;
}
